<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:module
					name="head_tag"
					action="add_to_title"
					value="organic_link"
					cms:constant="value"
					/>
			</title>
			<cms:module name="head_tag" action="show"/>
			<cms:template file="parts/ga.txt"/>
		</head>

		<body>
			<cms:desktop>
				<!-- 2 Header templates Desktop-->
				<cms:template file="parts/header.xml"/>
				<cms:template file="parts/header_floating.xml"/>
			</cms:desktop>

			<!-- Header template for mobile -->
			<cms:mobile>
				<cms:template file="parts/header.xml"/>
			</cms:mobile>

			<section class="header organic">

				<!-- div with logo h1 and p -->
				<div class="title">
					<cms:svg file="site-sprite.svg" symbol="icon-organic"/>
					<h1><cms:text constant="organic_link"/></h1>
					<p><cms:text constant="organic_title"/></p>
				</div>
			</section>

			<!-- Section Articles -->
			<section class="content organic">
				<!-- Specific article1 linked to generic article with title -->
				<cms:module
					name="articles"
					action="show"
					text_id="organic_solo1"
					template="parts/articles/article_generic.xml"
					>
				</cms:module>

				<!-- Specific article2 linked to generic article with title -->
				<cms:module
					name="articles"
					action="show"
					text_id="organic_solo2"
					template="parts/articles/article_generic.xml"
					>
					<param name="title" value=""/>
				</cms:module>


				<!-- Specific article3 linked to generic article with title -->
				<cms:module
					name="articles"
					action="show"
					text_id="organic_solo3"
					template="parts/articles/article_generic.xml"
					>
					<param name="title" value=""/>
				</cms:module>
			</section>

			<!-- Section with latest articles  -->
			<section class="latest organic">
				<h2><cms:text constant="latest_organic"/></h2>

				<!-- checkbox to act as toggle to reveal content -->
				<input type="checkbox" id="toggle"/>

				<!-- Container with article list  -->
				<div>
					<!--
					Show articles group list
					Show image gallery connected to artice
					Show link to article_view.xml with a name of article_title
				-->
					<cms:module
						name="articles"
						action="show_list"
						group="organic"
						order_by="id"
						template="parts/articles/article_generic.xml"
						>
						<param name="title" value=""/>
						<param name="image" value=""/>
						<param name="link_view" value=""/>
						<param name="limit" value="150"/>
						<param name="file" value="organic_article.xml"/>
					</cms:module>

					<!-- label for input checkbox with text constant -->
					<label for="toggle" class="button">
						<cms:text constant="show_more"/>
					</label>

				</div>
			</section>
			<footer>
				<!-- Footer Template -->
				<cms:template file="parts/footer.xml"/>
			</footer>
		</body>
	</html>
</document>

<document>
	<cms:desktop>
		<a href="$params['image']" cms:eval="href">
			<img
				src="gallery::getThumbnailById($params['id'], null, 157, Thumbnail::CONSTRAIN_HEIGHT)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
				class="desktop"
				/>
		</a>
	</cms:desktop>
	<cms:mobile>
		<a href="$params['image']" cms:eval="href">
			<img
				src="gallery::getThumbnailById($params['id'], null, 85, Thumbnail::CONSTRAIN_HEIGHT)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
				class="desktop"
				/>
		</a>
	</cms:mobile>
</document>
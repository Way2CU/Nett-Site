<document>
	<cms:desktop>
		<a href="$params['image']" cms:eval="href" class="testimonial">
			<img
				src="gallery::get_image($params['id'], 300, Thumbnail::CONSTRAIN_WIDTH)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
				class="desktop"
				/>
		</a>
	</cms:desktop>
	<cms:mobile>
		<a href="$params['image']" cms:eval="href" class="testimonial">
			<img
				src="gallery::get_image($params['id'], 140, Thumbnail::CONSTRAIN_WIDTH)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
				class="desktop"
				/>
		</a>
	</cms:mobile>
</document>

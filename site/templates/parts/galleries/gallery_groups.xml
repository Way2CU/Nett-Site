<document>
	<cms:desktop>
	<!-- Tablet showcase container & img inside-->
			<cms:module
				name="gallery"
				action="show_image"
				text_id="desktop"
				group_id="$params['id']"
				template="parts/galleries/desktop_gallery.xml"
				cms:eval="group_id"
			/>

		<!-- Mobile showcase container & img inside-->
			<cms:module
				name="gallery"
				action="show_image"
				text_id="mobile"
				group_id="$params['id']"
				template="parts/galleries/mobile_gallery.xml"
				cms:eval="group_id"
			/>
	</cms:desktop>
	<cms:mobile>
	<!-- Mobile showcase container & img inside-->
		<cms:module
			name="gallery"
			action="show_image"
			text_id="mobile"
			group_id="$params['id']"
			template="parts/galleries/mobile_gallery.xml"
			cms:eval="group_id"
		/>
	</cms:mobile>
</document>
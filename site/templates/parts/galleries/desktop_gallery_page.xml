<document>
	<cms:desktop>
		<a href="javascript:void()" class="large_tumb">
				<div class="hidden">
					<h3><cms:var param="title" multilanguage="yes" /></h3>
					<p><cms:var param="description" multilanguage="yes"/></p>
				</div>
			<img
				src="gallery::getThumbnailById($params['id'], null, 280, Thumbnail::CONSTRAIN_BOTH)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
				class="desktop"
				/>
		</a>
	</cms:desktop>

	<cms:mobile>
			<a href="$params['image']" cms:eval="href" class="large_tumb">
				<img
					src="gallery::getThumbnailById($params['id'], null, 250, Thumbnail::CONSTRAIN_HEIGHT)"
					alt="$params['title'][$language]"
					cms:eval="src,alt"
					class="mobile"
					/>
				<div class="hidden">
					<p><cms:var param="description" multilanguage="yes"/></p>
					<button><cms:text constant="gallery_show_button" /></button>
				</div>
			</a>
	</cms:mobile>
</document>
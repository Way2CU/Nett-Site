<document>
	<cms:desktop>
		<div class="desktop">
			<!--Container and img form gallery  -->
				<img
				src="gallery::get_image($params['id'], 700, Thumbnail::CONSTRAIN_HEIGHT)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
				class="desktop"
				/>
		</div>
	</cms:desktop>
	<cms:mobile>
		<div class="desktop">
			<!--Container and img form gallery  -->
				<img
				src="gallery::get_image($params['id'], 150, Thumbnail::CONSTRAIN_HEIGHT)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
				class="desktop"
				/>
		</div>
	</cms:mobile>
</document>

<document>
	<!-- 2 modules with gallery by text id "desktop" "mobile" with markdown on desktop -->
	<div class="gallery_container">
	<!-- Mobile galler -->
		<cms:module
			name="gallery"
			action="show_image"
			text_id="mobile"
			group_id="$params['id']"
			template="parts/galleries/mobile_gallery_page.xml"
			cms:eval="group_id"
		/>
	<!-- Desktop gallery -->
			<cms:module
				name="gallery"
				action="show_image"
				text_id="desktop"
				group_id="$params['id']"
				template="parts/galleries/desktop_gallery_page.xml"
				cms:eval="group_id"
			/>
		</div>
</document>
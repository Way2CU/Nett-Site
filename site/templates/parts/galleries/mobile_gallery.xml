<document>
	<cms:desktop>
		<div class="mobile">
			<cms:markdown param="description" multilanguage="yes"/>
			<img
			src="gallery::getThumbnailById($params['id'], null, 165, Thumbnail::CONSTRAIN_HEIGHT)"
			alt="$params['title'][$language]"
			cms:eval="src,alt"
			/>
		</div>
	</cms:desktop>
	<cms:mobile>
		<div class="mobile">
			<img
			src="gallery::getThumbnailById($params['id'], null, 230, Thumbnail::CONSTRAIN_BOTH)"
			alt="$params['title'][$language]"
			cms:eval="src,alt"
			/>
		</div>
	</cms:mobile>
</document>
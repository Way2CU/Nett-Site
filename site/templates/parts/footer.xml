<document>
	<div class="footer_content">
		<!-- Color Logo img  -->
		<img
			src="_BASEURL.'/site/images/logo_color.svg'"
			alt="next_site_logo"
			cms:eval="src"
		/>

		<!-- Constant with text from H1 -->
		<h2><cms:text constant="logo_text"/></h2>

		<!-- Button-phone -->
		<a href="'tel:'.urlencode(Language::get_Text('phone'))"
			cms:eval="href"
			class="button"
			>
			<!-- Phone text -->
			<cms:text constant="phone"/>
			<!-- icon-phone -->
			<cms:svg file="site-sprite.svg" symbol="icon-phone"/>
		</a>
	</div>
</document>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:module
					name="head_tag"
					action="add_to_title"
					value="funding_link"
					cms:constant="value"
					/>
				<cms:module
					name="articles"
					action="add_to_title"
					id="$_REQUEST['name']"
					cms:eval="id"
					/>
			</title>
			<cms:module name="head_tag" action="show"/>
			<cms:raw file="parts/ga.txt"/>
		</head>

		<body>
			<cms:desktop>
				<!-- 2 Header templates Desktop-->
				<cms:template file="parts/header.xml"/>
				<cms:template file="parts/header_floating.xml"/>
			</cms:desktop>

			<!-- Header template for mobile -->
			<cms:mobile>
				<cms:template file="parts/header.xml"/>
			</cms:mobile>

			<!-- Article with ID IMG and TITLE -->
			<section class="read">
				<cms:module
					name="articles"
					action="show"
					id="$_REQUEST['name']"
					template="parts/articles/article_generic.xml"
					cms:eval="id"
					>
					<param name="title" value=""/>
					<param name="image" value=""/>
				</cms:module>
			</section>

			<footer>
				<!-- Footer Template -->
				<cms:template file="parts/footer.xml"/>
			</footer>
		</body>
	</html>
</document>

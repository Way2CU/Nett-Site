<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="press_link"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="press">

			<cms:desktop>
				<!-- 2 Header templates Desktop-->
				<cms:template file="parts/header.xml"/>
				<cms:template file="parts/header_floating.xml"/>
			</cms:desktop>

			<!-- Header template for mobile -->
			<cms:mobile>
				<cms:template file="parts/header.xml"/>
			</cms:mobile>

			<!-- div with logo h1 and p -->
			<section class="header_press">
				<div class="title">
					<cms:svg file="site-sprite.svg" symbol="icon-press"/>
					<h1><cms:text constant="press_link"/></h1>
					<p><cms:text constant="press_title"/></p>
				</div>
			</section>
			<!-- Section From the press -->
			<section class="press">
				<cms:module
					name="articles"
					action="show_list"
					group="from_the_press"
					template="parts/articles/article_generic.xml"
				>
				<param name="link_view" value=""/>
				<param name="image" value=""/>
				</cms:module>
			</section>
			<!-- Footer Template -->
			<footer>
				<cms:template file="parts/footer.xml"/>

				<!-- Copyright -->
				<cms:template file="stock/copyright.xml">
					<param name="holder" value="copyright_holder"/>
					<param name="text" value="copyright_text"/>
					<param name="light" value=""/>
				</cms:template>
			</footer>
		</body>
	</html>
</document>
